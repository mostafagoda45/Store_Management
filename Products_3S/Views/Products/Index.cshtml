@model IEnumerable<Products_3S.Models.Product>
@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center mt-5">
    <h1 class="display-3">Products</h1>
    @Html.ActionLink("Create new product", "Create", "Products", new { area = "" }, new { @class = "btn btn-primary btn-lg mb-4 float-right fa fa-plus" })
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>ProductName</th>
                <th>QuantityPerUnit</th>
                <th>ReorderLevel</th>
                <th>SupplierName</th>
                <th>UnitPrice</th>
                <th>UnitInStock</th>
                <th>UnitOnOrder</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{int row_id = 0;}
            @foreach (var product in Model)
            {
            <tr>
                <td>@(row_id += 1)</td>
                <td>@product.ProductName</td>
                <td>@product.Unit.UnitName</td>
                <td>@product.ReorderLevel</td>
                <td>@product.Supplier.SupplierName</td>
                <td>@product.UnitPrice</td>
                <td>@product.UnitInStock</td>
                <td>@product.UnitOnOrder</td>
                <td class="d-inline-flex">
                    <a href="@Url.Action("Edit", "Products", new { id = product.ProductID })" class="btn btn-primary">
                        <span class="fa fa-pencil">   Edit</span>
                    </a>&nbsp;
                    <a href="@Url.Action("Details", "Products", new { id = product.ProductID })" class="btn btn-info">
                        <span class="fa fa-info">   Detials</span>
                    </a>&nbsp;
                    <a href="@Url.Action("Delete", "Products", new { id = product.ProductID })" class="btn btn-danger">
                        <span class="fa fa-remove">   Delete</span>
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

<div>
    @Html.ActionLink("Back", "Index", "Home", new { area = "" }, new { @class = "btn btn-primary mr-4 fa fa-arrow-circle-o-left" })
</div>