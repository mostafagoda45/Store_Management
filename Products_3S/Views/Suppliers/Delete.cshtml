@model Products_3S.Models.Supplier
@{
    ViewBag.Title = "Delete supplier";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Delete", "Suppliers", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.SupplierID)
<div class="jumbotron mt-4">
    <h3 class="display-4">Delete supplier</h3>
    <p class="lead">Are you sure you want to delete this supplier - @Model.SupplierName ?</p>
    <p class="lead">
        <button type="submit" class="btn btn-danger fa fa-remove">   Delete</button>
        <a href="@Url.Action("Index", "Suppliers")"  class="btn btn-dark">
            <span class="fa fa-ban">   Cancel</span>
        </a></p>
</div>
    
}